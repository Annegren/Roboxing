{% extends 'layout.html.twig' %}
{% block title %} - Inscription {% endblock %}
{% block content %}
<header id="home">
            
	<section class="hero" id="hero" style="background-image: none; padding: 15px;">
	  <div class="container">
		<div class="row">
		  <div class="col-md-12 text-right navicon">
			<a id="nav-toggle" class="nav_slide_button" href="#"><span></span></a>
		  </div>
		</div>
		<div class="row">
		  <div class="col-md-8 col-md-offset-2 text-center inner pt-0">
			<h1 class="animated fadeInDown" style="padding: 15px;">CREER VOTRE<span>COMPTE</span></h1>
		  </div>
		</div>
	  </div>
	</section>
</header>
    <div class="contact1">
		<div class="container-contact1">
			<div class="contact1-pic js-tilt" data-tilt>
				<img src="https://zupimages.net/up/21/19/nhy3.png" alt="IMG">
			</div>

			<form method="POST" class="contact1-form validate-form">
				

				<div class="wrap-input1 validate-input" data-validate = "Name is required">
					<input class="input1" type="text" name="username" placeholder="Pseudo">
					<span class="shadow-input1"></span>
				</div>
                {% if errors.username is defined and not empty %}
                    <div class="alert" role="alert" id="contact_error">       
                        <p>{{ errors.username }}</p>
                    </div>
                {% endif %}
                {% if errors.username1 is defined and not empty %}
                    <div class="alert" role="alert" id="contact_error">       
                        <p>{{ errors.username1 }}</p>
                    </div>
                {% endif %}
				

				<div class="wrap-input1 validate-input" data-validate = "Subject is required">
					<input class="input1" type="password" name="password" placeholder="Mot de passe">
					<span class="shadow-input1"></span>
                    {% if errors.password is defined and not empty %}
                        <div class="alert" role="alert" id="contact_error">       
                            <p>{{ errors.password }}</p>
                        </div>
                    {% endif %}
                    {% if errors.password1 is defined and not empty %}
                        <div class="alert" role="alert" id="contact_error">       
                            <p>{{ errors.password1 }}</p>
                        </div>
                    {% endif %}
                </div>
                <div class="wrap-input1 validate-input" data-validate = "Subject is required">
                    <input class="input1" type="password" placeholder="VÃ©rification du mot de passe" name="check_password">
                    {% if errors.check_password is defined and not empty %}
                        <div class="alert" role="alert" id="contact_error">       
                            <p>{{ errors.check_password }}</p>
                        </div>
                    {% endif %}
                </div>
				<div class="container-contact1-form-btn">
					<button type="submit" class="contact1-form-btn">
						<span>
							S'inscrire
							<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
						</span>
					</button>
				</div>
			</form>
		</div>
	</div>
{% endblock %}